.login-logo {
  width: 100%;
  padding: 100rpx 0;
  text-align: center;
}

.login-logo-img {
  width: 380rpx;
  height: 100rpx;
  margin: 0;
  padding: 0;
  border: none;
}

.login-input {
  display: flex;
  justify-content: center;
  width: 100%;
  margin-top: 50rpx;
  text-align: center;
}
.login-input-box{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  padding: 0 60rpx;
}
.login-input-authCode{
  width: 100%;
  border-bottom-style: solid;
  border-bottom-color: #ccc;
  border-bottom-width: 1rpx;
  font-size: 28rpx;
  text-align: left;
}
.conAuthCode{
  display: flex;
  flex: 3;
}
.getAuthCode{
  display: flex;
  justify-content: center;
  flex: 1;
  border: 1rpx solid red;
  border-radius: 20rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  color: red;
}
.login {
  width: 630rpx;
  height: 64rpx;
  border-bottom-style: solid;
  border-bottom-color: #ccc;
  border-bottom-width: 2rpx;
  font-size: 28rpx;
  text-align: left;
}

.login-btn-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 60rpx;
  margin-top: 100rpx;
  box-sizing: border-box;
  width: 100%;
}
.login-checkBox{
  font-size: 28rpx;
}
.login-btn-text{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  font-weight: 900;
  color: #ff1c40;
}
.nextBtn{
  width: 100%;
  height : 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  background-color: #000;
  color: #fff;
}