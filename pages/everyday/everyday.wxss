.headerImg{
  width: 100%;
  height: 260rpx;
}
.scroll-box{
  padding-top: 80rpx;
  box-sizing: border-box;
  height:  540rpx;
  white-space: nowrap;
}
.scroll-item{
  display: inline-block;
  padding-left: 114rpx;
  box-sizing: border-box;
  width: 616rpx;
  height: 470rpx;
}
.scroll-item-img{
  width: 480rpx;
  height:  460rpx;
}
.scroll-item-end{
  margin-right: 90rpx;
}
/*navList样式  */
.navList{
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding: 0 40rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.navList-item{
  display: flex;
  flex: 1;
  justify-content: center;
  font-size: 28rpx;
}
.active{
  box-sizing: border-box;
  color: #FF1C40;
  border-bottom: 1rpx solid #FF1C40;
}
/*商品列表样式  */
.listBox{
  margin-top: 20rpx; 
}
.list-box{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 230rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.list-box-left{
  display: flex;
  width: 220rpx;
  height: 220rpx;
}
.list-box-right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
  width: 455rpx;
  height: 230rpx;
}
.list-box-right-title{
  width: 455rpx;
  height: 60rpx;
  text-align: left;
  line-height: 60rpx;
  font-size: 22rpx;
  color: #444;
}
.list-box-right-content{
  display: flex;
  flex-direction: row;
  width: 100%
}
.list-box-right-price{
  display: flex;
  flex: 3;
  flex-direction: column;
  justify-content: flex-end;
  margin-bottom: 24rpx;
  font-size: 24rpx;
  color: #999;
  
}
.list-box-right-iconBox{
  display: flex;
  flex: 1;
  flex-direction: column;
  margin-bottom: 24rpx;
}
.list-box-right-iconImg{
  width: 78rpx;
  height: 78rpx;
  margin-bottom: 8rpx;
}
.text{
  font-size: 24rpx;
  line-height: 32rpx;
}
.comment{
  margin-left: 10rpx; 
}
.list-box-right-icontext{
  font-size: 24rpx;
  color: red;
}